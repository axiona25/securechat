# ──────────────────────────────────────────────────────
# SecureChat — Environment Variables
# Copia questo file come .env e compila i valori
# STESSI NOMI per locale e produzione, valori diversi
# ──────────────────────────────────────────────────────

# ── Environment ──
DJANGO_ENV=development
DEBUG=True
DJANGO_SECRET_KEY=your-super-secret-key-change-me

# ── Hosts ──
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Database (MySQL) ──
# Locale (Docker): host=db, port=3306
# DO Managed: host=xxx.db.ondigitalocean.com, port=25060
DB_NAME=securechat
DB_USER=securechat
DB_PASSWORD=securechat
DB_HOST=db
DB_PORT=3306
DB_SSL_CA=

# ── Redis ──
# Locale (Docker): redis://redis:6379/0
# DO Managed: rediss://default:PASSWORD@host:25061/0
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ── DigitalOcean Spaces (S3-compatible storage) ──
USE_SPACES=False
SPACES_ACCESS_KEY=
SPACES_SECRET_KEY=
SPACES_BUCKET_NAME=securechat-media
SPACES_ENDPOINT_URL=https://fra1.digitaloceanspaces.com
SPACES_REGION=fra1

# ── Firebase ──
FIREBASE_CREDENTIALS_PATH=config/firebase-service-account.json

# ── Translation (Argos Translate) ──
TRANSLATION_CACHE_TTL=86400
TRANSLATION_MAX_TEXT_LENGTH=5000

# ── Sentry (Error Tracking — opzionale) ──
SENTRY_DSN=

# ── Logging ──
LOG_LEVEL=DEBUG

# ── iOS ──
IOS_BUNDLE_ID=com.securechat.app
